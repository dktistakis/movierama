<h1><%= params[:action] == 'new' ? "Add new Movie" : "Edit Movie" %></h1>
<div class="span-10">
  <%= form_for(@movie, url: params[:action] == 'new' ? user_movies_path(current_user) : user_movie_path(current_user, @movie)) do |f| %>
    <%= render 'shared/error_messages', obj: f.object %>
    <div class="field">
      <%= f.label :title %>
      <br>
      <%= f.text_field :title %> 
    </div>
    <div class="field">
      <%= f.label :description %>
      <br>
      <%= f.text_area :description %> 
    </div>
    <br>
    <%= f.submit params[:action] == 'new' ? "Create Movie" : "Update Movie" %>
  <% end %>
</div>

