<h1>Add new Movie</h1>
<div class="span-10">
  <%= form_for(@movie, url: user_movies_path(current_user)) do |f| %>
    <%= render 'shared/error_messages', obj: f.object %>
    <div class="field">
      <%= f.label :title %>
      <br>
      <%= f.text_field :title %> 
    </div>
    <div class="field">
      <%= f.label :description %>
      <br>
      <%= f.text_area :description %> 
    </div>
    <br>
    <%= f.submit "Create Movie" %>
  <% end %>
</div>

