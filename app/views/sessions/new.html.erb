<h1>Sign in</h1>
<div class="row">
  <div class="span-10">
    <%= form_for(:session, url: sessions_path) do |f| %>
      <div class="field">
        <%= f.label :name %>
        <br>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :password %>
        <br>
        <%= f.password_field :password %>
      </div>
      <br>
      <%= f.submit "Login" %>
    <% end %>
    <br>
    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>